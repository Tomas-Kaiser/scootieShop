<% if (current_user && current_user.admin) || @users.size <= 1 %> 
<h1>Inventory</h1>
<table>
  <thead>
    <tr>
      <th>Item ID</th>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Stock</th
      <th colspan = 3></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.id, item %></td>
        <td><%= link_to (image_tag item.image_url, :style =>"height:50px"), item %></td>
        <td><%= link_to item.title, item %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.category %></td>
        <td><%= item.stock %></td>
        <td><%= link_to 'Edit', edit_item_path(item), {:class => "btn"} %></td>
        <td><%= link_to 'Destroy', item, method: :delete, :class => "btn", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <p>Unauthorized User</p>
  <%= link_to "Go to ScootieShop's Homepage", root_path %>
<% end %>
