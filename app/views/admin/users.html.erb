<% if (current_user && current_user.admin) || @users.size <= 1 %> 

<h2>Users</h2>

<table class ="admin-users">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Admin Status</th>
      <th>Upgrade to Admin</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <% if user.admin %>
            <td class = "admin-label">Admin</td>
            <td class = "admin-btn"><%= link_to "Downgrade to User", {controller: "admin", action: "downgrade_admin", id: user.id}, :class => "update-btn upgrade" %></td>
        <% else %>
            <td>User</td>
            <td class = "admin-btn"><%= link_to "Upgrade to Admin", {controller: "admin", action: "upgrade_admin", id: user.id}, :class => "update-btn downgrade" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <p>Unauthorized User</p>
  <%= link_to "Go to ScootieShop's Homepage", root_path %>
<% end %>
