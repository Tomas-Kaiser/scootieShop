<% if (current_user && current_user.admin) || @users.size <= 1 %>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>Email</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Admin Status</th>
      <th>Upgrade to Admin</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.email %></td>
        <td><%= u.created_at %></td>
        <td><%= u.updated_at %></td>
        <% if u.admin %>
            <td>Admin</td>
            <td><a href="admin/downgrade/<%= u.id %>">Downgrade to User</a></td>
        <% else %>
            <td>User</td>
            <td><a href="admin/upgrade/<%= u.id %>">Upgrade to Admin</a></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <p>Unauthorized User</p>
  <%= link_to "Go to ScootieShop's Homepage", root_path %>
<% end %>
