<p id="notice"><%= notice %></p>

<h2>Edit Categories</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.description %></td>
        <td><%= category.image %></td>
        <td><%= link_to 'Show', category, :class => "btn edit" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => "btn edit" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, :class => "btn destroy", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Category', :class => "buttons" %>



