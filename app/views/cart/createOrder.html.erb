<div id="itemsContainer">
    <h1>Thank You<br>
        You have just placed an order </h1>
</div>

<table id="customers">
    <tr>
        <% @orders.id %>
       <td>Order reference for the order you just placed <%= @order.id %></td>
    </tr>
</table>    

<table id="customers">
    <% @total = 0 %>
    <% @orderitems.each do |id,quantity| %>
      <tr>
        <% item = Orderitem.find_by_id(id) %>
       
        <td><%= item.title %></td>
        <td><%= item.quantity %></td>
       <td><%=number_to_currency(item.price, :unit => "€")%></td> 
       <td><%= number_to_currency(item.quantity * item.price, :unit => "€") %></td>
       </tr>
          <% timx = (item.quantity * item.price)%>  
          <% @total += timx %>
      </tr>
    <% end %>
    
    <td>Order Total: &euro; <%= @total %></td>
       
    <% shipping = 30 %>
      <% @overall = shipping + @total%>
      <tr>
          <td>Shipping &euro;30</td>
          <td>You Pay &euro; <%= @overall %></td>
      </tr>
        <tr>
         
         <td>
             <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
                 <input type="hidden" name="cmd" value="_xclick">
                 <input type="hidden" name="business" value="wbnicanor01@gmail.com">
                 <input type="hidden" name="item_name" value="ScootieShop Order Number <%= @order.id %>">
                 <input type="hidden" name="currency_code" value="EUR">
                 <input type="hidden" name="amount" value="<%= @overall %>">
                 <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynow_LG.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
                <input type="hidden" name="return" value="#" > <!--this url shall be changed upon deployment-->
            </form>
         </td>
      </tr>

</table>


