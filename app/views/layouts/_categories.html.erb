<h2>Categories</h2>
<hr class="line">
<div id="categoriescontainer">
  <div class="card-container">
    <% @categories.each do | category| %>
    <div class="card">
      <h4> <%= category.title.sub('-',' ') %>s</h4>
      <%= image_tag(category.image, :class => "img-item") %>
      <hr />
      <div class="container-card-text">
      <p><%= category.description %></p>
      </div>
     
      <div class="card-btns">
        <%= link_to category.title, {controller: "items", action: "category", title: category.title}, class: "buttons" %>
      </div>
    </div>
  <% end %>
  </div>
</div>

